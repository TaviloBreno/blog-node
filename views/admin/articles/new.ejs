<%- include('../../partials/header.ejs') %> 
<%-include('../../partials/navbar.ejs') %>

<div class="container">
  <hr />
  <div class="card">
    <div class="card-header">
        <h2>Novo artigo</h2>
    </div>
    <div class="card-body">
    <form method="post" action="/categories/save">
      <input
        class="form-control"
        type="text"
        name="title"
        placeholder="Defina o titulo do artigo..."
      /><br />
      <textarea class="form-control" placeholder="Escreva o artigo aqui..." name="body" rows="10" id="article"></textarea><br>
      <label for="category">Categoria</label>
      <select name="category" id="" class="form-control">
        <% categories.forEach((category) => { %>
            <option value="<%= category.id %>"><%= category.title %></option>
        <% }) %>
      </select><br>
      <input type="submit" class="btn btn-success" value="Cadastrar" />
    </form>
    </div>
  </div>
</div>

<%- include('../../partials/footer.ejs') %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
  tinymce.init({
    selector: '#article',
    plugins: [
        'advlist autolink code preview image lists link print hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
    ],
    toolbar: 'undo redo | formatselect | bold italic underline strikethrough | alignleft aligncenter alignright alignjustify | outdent indent | link image | advlist autolink code preview | fullscreen insertdatetime media save | table emoticons'
  });
</script>



